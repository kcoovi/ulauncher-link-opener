{
  "required_api_version": "^2.0.0",
  "name": "Smart URL Opener",
  "description": "Intelligent URL completion with custom search engines, local dev shortcuts, and clipboard support.",
  "developer_name": "Kevin Coovi",
  "icon": "images/icon.png",
  "preferences": [
    {
      "id": "browser_kw",
      "type": "keyword",
      "name": "Open URL",
      "default_value": "go"
    },
    {
      "id": "search_engine",
      "type": "select",
      "name": "Search Engine",
      "description": "Select your preferred search engine",
      "default_value": "Google",
      "options": [
        "Google",
        "DuckDuckGo",
        "Bing",
        "Brave",
        "Ecosia",
        "Yandex"
      ]
    },
    {
      "id": "prefer_https",
      "type": "select",
      "name": "Prefer HTTPS",
      "description": "Default to HTTPS for domains without a specified protocol",
      "default_value": "Yes",
      "options": [
        "Yes",
        "No"
      ]
    },
    
    {
      "id": "max_suggestions",
      "type": "text",
      "name": "Max Suggestions",
      "description": "Number of suggestions to show in the list",
      "default_value": "5"
    }
  ]
}
